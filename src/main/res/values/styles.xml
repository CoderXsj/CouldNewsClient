<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>

    <!-- 启动界面的主题文件 -->
    <style name="AppTheme.splash" parent="AppTheme">
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <!-- 日间模式 -->
    <style name="AppTheme.day" parent="AppTheme">
        <item name="containerBackground">@color/white_dark</item>
        <item name="containerBackground2">@color/white</item>
        <item name="textBackground">@color/gray_light</item>
        <item name="titleColor">@color/gray_dark</item>
        <item name="textColor">@color/gray</item>
        <item name="selectorBtn">@drawable/navigator_list_item_day</item>
        <item name="selectorTransparentItem">@drawable/news_list_item_day</item>
        <!--item name="selectorListItem">@drawable/list_item_day</item-->
    </style>

    <!-- 夜间模式 -->
    <style name="AppTheme.night" parent="AppTheme">
        <item name="containerBackground">@color/gray_dark</item>
        <item name="containerBackground2">@color/black</item>
        <item name="textBackground">@color/gray_dark</item>
        <item name="titleColor">@color/white_dark</item>
        <item name="textColor">@color/green_light</item>
        <item name="selectorBtn">@drawable/navigator_list_item_night</item>
        <item name="selectorTransparentItem">@drawable/news_list_item_day</item>
        <!--item name="selectorListItem">@drawable/list_item_night</item>-->
    </style>

    <style name="BottomTabStyle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:background">?attr/containerBackground2</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ta_pw_in</item>
        <item name="android:windowExitAnimation">@anim/ta_pw_in</item>
    </style>

    <!--  这个是加入的代码 -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="sns_button_style">
        <item name="android:layout_width">@dimen/dimen_50</item>
        <item name="android:layout_height">@dimen/dimen_50</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>