<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_item_height"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginTop="6dp"
    android:background="?attr/containerBackground2"
    android:orientation="vertical"
    app:cardBackgroundColor="?attr/containerBackground2"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/containerBackground2"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_news_item_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_item_title_height"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?attr/titleColor"
            android:textSize="14sp" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_news_item_img1"
            android:layout_width="@dimen/niv_image_width"
            android:layout_height="@dimen/niv_image_width"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_news_item_title"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_news_item_img2"
            android:layout_width="@dimen/niv_image_width"
            android:layout_height="@dimen/niv_image_width"
            android:layout_alignTop="@+id/niv_news_item_img1"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/niv_news_item_img1"
            android:scaleType="fitXY" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_news_item_img3"
            android:layout_width="@dimen/niv_image_width"
            android:layout_height="@dimen/niv_image_width"
            android:layout_alignTop="@+id/niv_news_item_img1"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/niv_news_item_img2"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/tv_news_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_12"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="?attr/textColor"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_news_source"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_12"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textColor="?attr/textColor"
            android:textSize="10sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>